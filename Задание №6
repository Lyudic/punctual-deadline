#include "iostream"
#include "iomanip"

using namespace std;

int main(){
    int a, b, c;

    cout<<"Enter three numbers:"<< endl;
    cin >> a >> b >> c;

    float average = (a+b+c)/3;  //Среднее арифметическое 
    float min = ((a+a)-(c+c)-(b+b+b)); // разность удвоенной суммы первого и третьего чисел и утроенного второго числа

    setprecision(2);
    
    cout<< "average ="<<average<<endl
        << "min ="<<min<<endl;

    system("pause");
    return 0;
}
