#include "iostream"
#include "iomanip"

 using namespace std;

int main(){

    int X = 0;
    while(X < 3){ //Цикл 3-х покупок

    int x,y;
    cout<<"Enter the price of candy:"<<endl; //Ввод цены на конфеты
    cin >>x;
    cout<<"Enter the price of cookes:"<<endl; //ввод цены на печеньки
    cin >>y;

    float f = 2*y + 1.8*x; //Покупка 1 кг печенья и 1.8 кг конфет
    setprecision(2);

    cout<< "Purchase price: "<< f <<endl; //Цена покупки
    cout<< "\n";

    X++;
    }
    system("pause");
    return 0;

}
