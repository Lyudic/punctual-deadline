#include "iostream"
#include "iomanip"

 using namespace std;

int main(){

    int X = 0;
    while(X < 3){

    int x,y;
    cout<<"Enter the price of candy:"<<endl;
    cin >>x;
    cout<<"Enter the price of cookes:"<<endl;
    cin >>y;

    float f = 2*y + 1.8*x; //Покупка 1 кг печенья и 1.8 кг конфет
    setprecision(2);

    cout<< "Purchase price: "<< f <<endl;
    cout<< "\n";

    X++;
    }
    system("pause");
    return 0;

}
