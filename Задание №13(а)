#include "iostream"
#include "iomanip"

using namespace std;

int main(){
    int x, y;

    cout<<"Enter the price of candy:"<<endl;
    cin >> x;
    cout<<"Enter the price of cookies:"<<endl;
    cin >> y;

    float C = 0.3*x + 0.4*y;  //Покупка 300г конфет и 400г печенья
    setprecision(2);

    cout<< "Purchase price: "<< C <<endl;

    system("pause");
    return 0;

}
